          <p>{{rvcampaign.score}} %</p>
          <p>{{rvcampaign.name}}</p>
        </div>
        <div class="col-lg-4">
          <a class="btn btn-lg btn-primary" ui-sref="rvcampaign({campaign_id: $index})">view</a>
